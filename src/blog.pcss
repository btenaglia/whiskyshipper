/* BEGIN BLOG */
#section_blog {
  float: left;
  width: 100vw;
  @media (--mobile) {
    padding: 50px 0;
  }
  @media (--tabletport) {
    padding: 60px 0;
  }
  @media (--tabletland) {
    padding: 80px 0;
  }
  &.margin {
    @mixin MarginTopSection {};
  }
}
#list_post {
  @media (--mobile) {
    lost-column: 1/1;
  }
  @media (--tabletland) {
    lost-column: 8/12;
  }
  button {
    float: none;
    margin: auto;
    @media (--mobile) {
      width: 100%;
    }
    @media (--tabletport) {
      width: 370px;
    }
  }
}
article {
  @media (--mobile) {
    margin-bottom: 30px;
    lost-column: 1/1;
  }
  @media (--tabletport) {
    margin-bottom: 20px;
    lost-column: 1/2;
  }
  @media (--tabletland) {
    margin-bottom: 30px;
  }
  &.big {
    lost-column: 1/1;
  }
  &.single {
    lost-column: 1/1;
    .imgPost {
      float: left;
      width: 100%;
      margin: 35px 0;
    }
  }
  a {
    display: block;
    float: left;
    width: 100%;
    transition: var(--animacion);
    &:hover {
      @media (--tabletland) {
        filter: grayscale();
        .img {
          width: 100%;
          margin: 0 0 -40px;
        }
      }
    }
  }
  .img {
    float: left;
    transition: var(--animacion);
    @media (--mobile) {
      width: 100%;
      margin: 0;
    }
    @media (--tabletport) {
      width: calc(100% - 20px);
      margin: 0 0 -20px;
    }
  }
  .box_info {
    float: left;
    background: var(--blanco);
    @media (--mobile) {
      width: calc(100% - 20px);
      padding: 10px;
      margin: 0;
    }
    @media (--tabletport) {
      width: calc(100% - 40px - 20px);
      padding: 20px;
      margin: 0 0 0 20px;
    }
  }
}
/* END BLOG */